@model IEnumerable<CapaPresentacion.Models.ParticipanteModel>

@{
    ViewBag.Title = "Lista de Participantes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Participantes</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var participante in Model)
            {
                <tr>
                    <td>@participante.IdParticipante</td>
                    <td>@participante.Nombre</td>
                    <td>
                        <a href="/Participante/Eliminar/@participante.IdParticipante" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">No hay participantes disponibles.</td>
            </tr>
        }
    </tbody>
</table>