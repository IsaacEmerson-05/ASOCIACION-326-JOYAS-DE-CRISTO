@model CapaEntidades.Actividad
@{
    ViewBag.Title = "Editar Actividad";
}
<h2>Editar Actividad</h2>
<form method="post">
    <input type="hidden" name="IdActividad" value="@Model.IdActividad" />
    <div class="form-group">
        <label>Nombre</label>
        <input type="text" name="Nombres" value="@Model.Nombres" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Apellido</label>
        <input type="text" name="Apellidos" value="@Model.Apellidos" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Documento</label>
        <input type="text" name="DocumentoIdentidad" value="@Model.DocumentoIdentidad" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
</form>