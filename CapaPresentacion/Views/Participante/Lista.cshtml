@model List<CapaPresentacion.Models.ParticipanteModel>

@{
    ViewBag.Title = "Lista de Participantes";
}

<h2>Lista de Participantes</h2>

<p>
    <a href="@Url.Action("Insertar", "Participante")" class="btn btn-success">Agregar Participante</a>
</p>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var participante in Model)
            {
                <tr>
                    <td>@participante.IdParticipante</td>
                    <td>@participante.Nombre</td>
                    <td>
                        <a href="@Url.Action("Editar", "Participante", new { id = participante.IdParticipante })" class="btn btn-warning">Editar</a>
                        <a href="@Url.Action("Eliminar", "Participante", new { id = participante.IdParticipante })" class="btn btn-danger" onclick="return confirm('¿Estás seguro de eliminar este participante?');">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay participantes registrados.</p>
}
