/* Editar.cshtml */
@model CapaPresentacion.Models.EmpleadoModel
@{
    ViewBag.Title = "Editar Empleado";
}

<h2>Editar Empleado</h2>
<form method="post" action="@Url.Action("Editar", "Empleado")">
    <input type="hidden" name="IdEmpleado" value="@Model.IdEmpleado" />
    <div class="form-group">
        <label>Nombre:</label>
        <input type="text" name="Nombre" class="form-control" value="@Model.Nombre" required />
    </div>
    <div class="form-group">
        <label>Cargo:</label>
        <input type="text" name="Cargo" class="form-control" value="@Model.Cargo" required />
    </div>
    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a href="@Url.Action("Lista", "Empleado")" class="btn btn-secondary">Cancelar</a>
</form>