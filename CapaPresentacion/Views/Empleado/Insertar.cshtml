/* Insertar.cshtml */
@model CapaPresentacion.Models.EmpleadoModel
@{
    ViewBag.Title = "Insertar Empleado";
}

<h2>Insertar Empleado</h2>
<form method="post" action="@Url.Action("Insertar", "Empleado")">
    <div class="form-group">
        <label>Nombre:</label>
        <input type="text" name="Nombre" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Cargo:</label>
        <input type="text" name="Cargo" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a href="@Url.Action("Lista", "Empleado")" class="btn btn-secondary">Cancelar</a>
</form>